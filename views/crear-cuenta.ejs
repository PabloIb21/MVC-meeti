<div class="contenedor contenedor-formularios">
  <h1><%= nombrePagina %></h1>

  <form action="/crear-cuenta" method="POST" class="default-form">
    <div class="campo">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" placeholder="Tu Email">
    </div>
    <div class="campo">
      <label for="nombre">Nombre</label>
      <input type="text" id="nombre" name="nombre" placeholder="Tu Nombre">
    </div>
    <div class="campo">
      <label for="password">Password</label>
      <input type="password" id="password" name="password" placeholder="Tu Password">
    </div>
    <div class="campo">
      <label for="confirmar">Confirmar Password</label>
      <input type="password" id="confirmar" name="confirmar" placeholder="Confirmar Password">
    </div>
    <div class="campo enviar">
      <input type="submit" class="btn btn-rosa" value="Crear cuenta">
    </div>
  </form>
</div>