<main class="contenedor contenedor-formularios no-padding">
  <h1><%= nombrePagina %></h1>

  <form method="POST" class="default-form">
    <div class="campo">
      <label for="nombre">Nombre</label>
      <input type="text" name="nombre" id="nombre" value="<%= grupo.nombre %>" placeholder="Nombre Grupo">
    </div>

    <div class="campo descripcion">
      <label for="descripcion">Descripción</label>
      <div class="contenedor-editor">
        <input type="hidden" id="x" name="descripcion" value="<%= grupo.descripcion %>">
        <trix-editor input="x"></trix-editor>
      </div>
    </div>

    <div class="campo">
      <label for="categoria">Categoría</label>
      <select name="categoriaId">
        <option value="" selected disabled>-- Elige una categoria --</option>
        <% categorias.forEach(categoria => { %>
          <option 
            value="<%= categoria.id %>"
            <%= (grupo.categoriaId == categoria.id) ? 'selected' : '' %>
          ><%= categoria.nombre %></option>
        <% }) %>
      </select>
    </div>

    <div class="campo">
      <label for="url">Sitio Web</label>
      <input type="url" name="url" id="url" value="<%= grupo.url %>" placeholder="Sitio Web">
    </div>

    <div class="campo enviar">
      <input type="submit" class="btn btn-rosa" value="Editar Grupo">
    </div>
  </form>
</main>